# Azure Authentication - Token Validation
# Get tenant ID: az account show --query tenantId -o tsv
AZURE_TENANT_ID=your-tenant-id

# Application ID URI (audience claim in tokens) - from app registration
# Format: api://<app-registration-id>
APP_ID_URI=api://your-app-id

# Azure Authentication - Managed Identity (for Azure resource access)
# For local dev: Leave empty to use DefaultAzureCredential (az CLI, VS Code, etc.)
# In AKS: Set to the managed identity client ID assigned to the pod
# AZURE_CLIENT_ID=<managed-identity-client-id>

# Cosmos DB
# Get endpoint: az cosmosdb show -n <account-name> -g <rg> --query documentEndpoint -o tsv
COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_DATABASE_NAME=toytripdb
COSMOS_CONTAINER_NAME=toys

# Blob Storage
# Get URL: az storage account show -n <account-name> -g <rg> --query primaryEndpoints.blob -o tsv
STORAGE_ACCOUNT_URL=https://your-storage-account.blob.core.windows.net
BLOB_CONTAINER_AVATARS=avatars

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001
LOG_LEVEL=INFO
